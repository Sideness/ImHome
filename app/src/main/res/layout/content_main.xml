<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listMain"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_ad_unit_id">
    </com.google.android.gms.ads.AdView>

    <RelativeLayout android:id="@+id/emptyListMain"
        android:layout_marginTop="-80sp"
        android:layout_width="match_parent" android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imEmptyList"
            android:src="@drawable/ic_empty_list"
            android:layout_centerInParent="true"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <TextView
            android:id="@+id/tvEmptyList"
            android:layout_below="@id/imEmptyList"
            android:layout_centerHorizontal="true"
            android:text="@string/tvNoMessages"
            android:textSize="30sp"
            android:textColor="#DBDBDB"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tvEmptyListPlus"
            android:layout_below="@id/tvEmptyList"
            android:layout_centerHorizontal="true"
            android:text="@string/tvNoMessagesPlus"
            android:textSize="20sp"
            android:textColor="#DBDBDB"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imArrowDown"
            android:src="@drawable/ic_arrow_down"
            android:layout_width="25dp"
            android:layout_height="75dp"
            android:layout_marginLeft="-8sp"
            android:layout_marginTop="6sp"
            android:layout_alignTop="@+id/tvEmptyListPlus"
            android:layout_toRightOf="@+id/tvEmptyList"
            android:layout_toEndOf="@+id/tvEmptyList" />

    </RelativeLayout>

</RelativeLayout>
